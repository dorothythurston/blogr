<h1>Welcome</h1>
<%= link_to "Add post", new_post_path %>

<ul class= "posts">
  <% @posts.each do |post| %>
    <li>
      <%= post.title %>
      <%= post.tagline %>
      <%= post.content %>
      <%= post.user.email %>
      <%= link_to "Edit post", edit_post_path(post) %>
    </li>
  <% end %>
</ul>


